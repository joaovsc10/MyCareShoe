<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26957F">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plotted_pressure_stats_btn"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:drawableStart="@drawable/ic_baseline_show_chart_24"
        android:drawableLeft="@drawable/ic_baseline_show_chart_24"
        android:text="@string/plot_mean_pressure_en"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/illustrated_pressure_stats_btn"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:drawableStart="@drawable/ic_baseline_image_24"
        android:drawableLeft="@drawable/ic_baseline_image_24"
        android:text="@string/mean_pressure_illustration_en"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plotted_pressure_stats_btn"
        app:layout_constraintVertical_bias=".1" />


    <FrameLayout
        android:id="@+id/contentFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>